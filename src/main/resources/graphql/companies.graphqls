type Address {
    street: String!,
    zipCode: String!,
    town: String!,
    country: String!
}

type Company {
    name: String!,
    location: Address!
}

type Query {
    company(name:String) : Company;
}

type CompanyInput {
    name: String!,
    location: AddressInput!
}

type AddressInput {
    street: String!,
    zipCode: String!,
    town: String!,
    country: String!
}

type Mutation {
    createCompany(input: CompanyInput) : Company;
}